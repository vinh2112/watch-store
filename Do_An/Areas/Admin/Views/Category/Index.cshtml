@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model Do_An.Frameworks.DANHMUC
<!-- Page Heading -->
<div class="row">
    <div class="col-sm-12 col-md-6">
        <h1 class="h3 mb-2 text-gray-800">Danh Mục</h1>
    </div>
    <div class="col-sm-12 col-md-6" style="text-align:end;">
        <a class="btn btn-success btn-icon-split" href="@Url.Action("Insert","Category")">
            <span class="icon text-white-50">
                <i class="fas fa-plus" style="color:white;"></i>
            </span>
        </a>
    </div>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thống Kê</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã Danh Mục</th>
                        <th>Tên Danh Mục</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Category)
                    {
                        <tr>
                            <td>@item.MaDM</td>
                            <td><a href="@Url.Action("Edit","Category",new { maDM = item.MaDM})">@item.TenDM</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Assets/Admin/js/demo/datatables-demo.js"></script>
}

