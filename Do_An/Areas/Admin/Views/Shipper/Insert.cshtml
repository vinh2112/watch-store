
@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Do_An.Frameworks.SHIPPER

<div class="card shadow mb-auto">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông Tin Shipper</h6>
    </div>
    <div class="card-body">
        @if (TempData["Alert-Message"] != null)
        {
            <div class="alert @TempData["AlertType"]" id="success-alert">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong>@TempData["Alert-Message"]</strong>
            </div>
        }
        @using (Html.BeginForm("Insert", "Shipper", FormMethod.Post))
        {
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputSDT">Số điện thoại</label>
                    @Html.TextBoxFor(model => model.SDT, new { @class = "form-control", id = "inputSDT", required = "required" })
                </div>
                <div class="form-group col-md-4">
                    <label for="inputName">Tên khách hàng</label>
                    @Html.TextBoxFor(model => model.TenKH, new { @class = "form-control", id = "inputName", required = "required" })
                </div>
                <div class="form-group col-md-4">
                    <label for="inputCMND">CMND</label>
                    @Html.TextBoxFor(model => model.CMND, new { @class = "form-control", id = "inputCMND", maxlength = 9, required = "required" })
                </div>
            </div>
            <div class="dropdown-divider"></div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputEmail">Email</label>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "inputEmail", required = "required" })
                </div>
                <div class="form-group col-md-8">
                    <label for="inputDiaChi">Địa chỉ</label>
                    @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control", id = "inputDiaChi", required = "required" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputPassW">Mật khẩu</label>
                    <input type="password" class="form-control" name="PassW" id="inputPassW" required />
                </div>
                <div class="form-group col-md-8">
                    <label for="inputRePassW">Xác nhận mật khẩu</label>
                    <input type="password" class="form-control" name="rePassW" id="inputRePassW" required />
                </div>
            </div>

            <div class="dropdown-divider"></div>
            <div class="form-row flex-row-reverse">
                <button class="btn btn-success" type="submit">Save</button>
                <a href="@ViewBag.URL" class="btn btn-light btn-icon-split" style="margin-right:10px;">
                    <span class="icon text-gray-600">
                        <i class="fas fa-chevron-left"></i>
                    </span>
                    <span class="text">Back</span>
                </a>
            </div>

        }

    </div>
</div>


