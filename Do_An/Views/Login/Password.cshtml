
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Assets/Customer/css/style.css">
    <link rel="stylesheet" href="~/Assets/Customer/css/base.css">
    <link rel="stylesheet" href="~/Assets/Customer/fonts/fontawesome-free-5.15.1-web/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <title>NOLOGO</title>
</head>
<body>
    <div class="form">
        <div class="form_content">
            <a class="header__logo" href="@Url.Action("Index","Home", new { area = "Customer"})" style="display:block; color:var(--primary-color); border:2px solid var(--primary-color);width: 172px; margin: auto;">Nologo</a>
            <div class="content">
                <p style="font-size:24px; padding-top:16px;">Lấy lại mật khẩu</p>
                <p style="padding:8px 0 32px;">Nhập mật khẩu mới</p>
            </div>
            @using (Html.BeginForm("Password", "Login", FormMethod.Post))
            {
                <div class="signup__form-input" style="margin-bottom: 32px;">
                    <input type="password" name="Pass" required>
                    <div class="underline"></div>
                    <label>Mật khẩu mới</label>
                </div>
                <div class="signup__form-input" style="margin-bottom: 32px;">
                    <input type="password" name="RePass" required>
                    <div class="underline"></div>
                    <label>Xác nhận lại mật khẩu</label>
                </div>
                <div class="signup__form-function" style="margin: 0; float: right;">
                    <button type="submit" class="btn__Signup" style="display: flex; align-items: center;"><i class="fas fa-chevron-right"></i></button>
                </div>
            }
        </div>
    </div>
</body>
</html>